<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity3"
    android:orientation="vertical"
    android:background="#19000000"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_weight="1"
        android:id="@+id/CV1"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="4"
            android:gravity="start"
            android:id="@+id/llayout"
            android:background="#22000000"
            >
            <ImageView
                android:id="@+id/Fruite_Logo2"
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/apple1"
                android:layout_marginBottom="-20dp"
                >
            </ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apple"
                android:layout_weight="1"
                android:textSize="40sp"
                android:textStyle="bold"
                android:textColor="#F60D0D"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:id="@+id/Fruites2"
                >
            </TextView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C0D2EF"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        >

        <ImageView
            android:id="@+id/gotoHome"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_home_24"
            android:scaleType="fitCenter"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:adjustViewBounds="true"/>

        <ImageView
            android:id="@+id/previousFruit"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_navigate_before_24"
            android:scaleType="fitCenter"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:adjustViewBounds="true"/>

        <ImageView
            android:id="@+id/fruitPencil"
            android:layout_weight="1"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/pencil2"
            android:scaleType="fitCenter"
            android:padding="10dp"
            android:adjustViewBounds="true"/>

        <ImageView
            android:id="@+id/nextFruit"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_navigate_next_24"
            android:scaleType="fitCenter"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:adjustViewBounds="true"/>

        <ImageView
            android:id="@+id/shareFruitApp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:src="@drawable/baseline_share_24"
            android:scaleType="fitCenter"
            android:padding="10dp"
            android:adjustViewBounds="true"/>
    </LinearLayout>

</LinearLayout>